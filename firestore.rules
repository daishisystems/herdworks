rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated and owns the resource
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User profiles - users can only access their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Farms - users can only access their own farms
      match /farms/{farmId} {
        allow read, write: if isOwner(userId);

        // Lambing Season Groups under farms
        match /lambingSeasonGroups/{groupId} {
          allow read, write: if isOwner(userId);

          // Breeding Events under groups
          match /breedingEvents/{eventId} {
            allow read, write: if isOwner(userId);
          }

          // Scanning Events under groups
          match /scanningEvents/{eventId} {
            allow read, write: if isOwner(userId);
          }

          // Lambing Records under groups
          match /lambingRecords/{recordId} {
            allow read, write: if isOwner(userId);
          }
        }
      }
    }

    // Benchmarks - read-only for all authenticated users
    // Only Cloud Functions should write to this collection
    match /benchmarks_lambing/{benchmarkId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write benchmarks
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
